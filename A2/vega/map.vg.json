{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Diabetes Prevalence by Country (2021)",
    "width": 700,
    "height": 400,
    "background": "transparent",
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/map_data/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        },
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Jessicangelinet/A2_Git_FIT3179/refs/heads/main/A2/A2_data/worldDiabetes.csv",
                "format": {"type": "csv"}
              },
              "key": "Entity",
              "fields": ["Diabetes prevalence (% of population ages 20 to 79)"]
            }
          }
        ],
        "encoding": {
          "color": {
            "field": "Diabetes prevalence (% of population ages 20 to 79)",
            "type": "quantitative",
            "scale": {
              "scheme": "reds"
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Diabetes prevalence (% of population ages 20 to 79)", "type": "quantitative", "title": "Diabetes Prevalence (%)"}
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Jessicangelinet/A2_Git_FIT3179/refs/heads/main/A2/A2_data/worldDiabetes.csv",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightblue"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/map_data/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "lightgray"
        }
      }
    ]
  }