{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Diabetes Prevalence (2021)",
  "width": 900,
  "height": 450,
  "background": "transparent",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/map_data/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "transform": [
        {
          "lookup": "properties.ADM0_A3_IS",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Jessicangelinet/A2_Git_FIT3179/refs/heads/main/A2/A2_data/worldDiabetes.csv",
              "format": {"type": "csv"}
            },
            "key": "Code",
            "fields": ["Diabetes prevalence (% of population ages 20 to 79)"]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Diabetes prevalence (% of population ages 20 to 79)",
          "type": "quantitative",
          "scale": {
            "domain": [0, 2, 4, 6, 8, 10, 12.5, 15, 17.5, 19, 20],
            "range": [
              "#FFFFD7", "#FFFFB2", "#FFE58D", "#FFD769", "#FFC84D", "#FFA033", "#FF871C", "#FF6D00", "#FF5400", "#FF3A00", "#FF2000", "#FF0000"
            ]
          },
          "legend": {
            "orient": "bottom-left",
            "title": "Diabetes Prevalence (%)",
            "direction": "vertical",
            "titleAnchor": "right"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Diabetes prevalence (% of population ages 20 to 79)", "type": "quantitative", "title": "Diabetes Prevalence (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jessicangelinet/A2_Git_FIT3179/refs/heads/main/A2/A2_data/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/map_data/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "gray"
      }
    }
  ]
}