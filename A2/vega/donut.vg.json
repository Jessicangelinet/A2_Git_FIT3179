{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A donut chart showing the percentage distribution of sex in a selected year.",
    "width": 100,
    "height": 100,
    "title": {
        "text": "Diabetes Report in Malaysia",
        "anchor": "start", 
        "offset": 30       
      },
    
  
    "data": {
      "values": [
        {"sex": "male", "%": 42.98, "year": 2020},
        {"sex": "female", "%": 57.02, "year": 2020},
        {"sex": "male", "%": 42.92, "year": 2023},
        {"sex": "female", "%": 57.08, "year": 2023}
      ]
    },
    "params": [
      {
        "name": "yearSelection",
        "value": 2020,
        "bind": {
          "input": "select",
          "options": [2020, 2023],
          "name": "Year: ",
          "element": "select.year-dropdown"
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.year == yearSelection"
      }
    ],
    "mark": {
      "type": "arc",
      "innerRadius": 50,
      "outerRadius": 100
    },
    "encoding": {
      "theta": {
        "field": "%",
        "type": "quantitative",
        "stack": true
      },
      "color": {
        "field": "sex",
        "type": "nominal",
        "scale": {
          "domain": ["male", "female"],
          "range":  ["#FF6347", "#FF0000"]

        },
"legend": {
  "title": "Sex",
  "orient": "right",
  "offset": 60,
  "padding": 0,
  "direction": "vertical",  
  "legendY": 5000           
}
      },
      "tooltip": [
        {"field": "sex", "type": "nominal", "title": "Sex"},
        {"field": "%", "type": "quantitative", "title": "Percentage", "format": ".2f"}
      ]
    }
  }